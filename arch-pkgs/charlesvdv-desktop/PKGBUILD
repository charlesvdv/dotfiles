pkgname=charlesvdv-desktop
pkgver=0.0.1
pkgrel=1
pkgdesc="Desktop system configuration for charlesvdv system"
arch=('any')
url="https://github.com/charlesvdv/dotfiles"
license=('MIT')
groups=('charlesvdv')

# TODO: find better image viewer.

depends=(
    'alacritty'
    'arandr'
    'avahi'
    'awesome-terminal-fonts'
    'charlesvdv-base'
    'chromium'
    'cups'
    'eog'
    'evince'
    'feh'
    'firefox-developer-edition'
    'i3-wm'
    'i3lock'
    'libinput'
    'libreoffice-fresh'
    'libreoffice-fresh-fr'
    'maim'
    'mpv'
    'network-manager-applet'
    'networkmanager'
    'otf-fira-code'
    'pavucontrol'
    'peerflix'
    'powerline-fonts'
    'rxvt-unicode'
    'transmission-gtk'
    'vlc'
    'xclip'
    'xorg-server'
    'zathura'
)

post_install() {
    systemctl enable networkmanager
    systemctl enable avahi
}

post_upgrade() {
    post_install $1
}
